{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(def|if|else|elif|for|while|class|try|except|finally|with)\\b.*:(\\s*#.*)?$",
        "decreaseIndentPattern": "^\\s*(return|raise|break|continue|pass)\\b.*$|^\\s*$"
    }
}
